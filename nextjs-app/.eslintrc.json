{
  "root": true,
  "extends": ["next/core-web-vitals"],
  "plugins": [
    "@typescript-eslint",
    "eslint-plugin-react",
    "eslint-plugin-react-hooks",
    "unused-imports"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "no-trailing-spaces": "error",
    "no-console": "error",
    "semi": "error",
    "quotes": ["error", "double"],
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
